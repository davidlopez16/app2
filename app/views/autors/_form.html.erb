<%= form_for(@autor) do |f| %>
  <% @autor.errors.full_messages.each do |message| %>
      <%= message %>
  <% end %>

<div class="col-lg-6">
<div class="input-group ">
  <span class="control-label col-md-3 col-sm-3 col-xs-12" ><%= f.label :nombre %></span>
  
  <%= f.text_field :nombre, class:"form-control" %>
 
</div>

<div class="input-group ">
  <span class="control-label col-md-3 col-sm-3 col-xs-12"><%= f.label :apellido %>
    </span>
     <%= f.text_field :apellido, class:"form-control" %>
</div>

 <div class="actions ">
    <%= f.submit class:"btn btn-round btn-success fa fa-trash-o fa-lg" %>
  </div>
</div>
<%end%>
