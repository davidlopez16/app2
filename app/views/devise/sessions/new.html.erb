

				
				
				
		
		
 <div class="animate form login_form">

          
          
          
<fieldset>
    <legend>Iniciar sesi√≥n</legend>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control', require: '' %>
  </div>

  <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autofocus: true, class: 'form-control', require: '' %>
  </div>


  <% if devise_mapping.rememberable? -%>
  <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label "Recordarme" %>
    </div>
  <% end -%>

  <div class="form-group">
    <%= button_tag(type: 'submit', class: "btn btn-success btn-block") do %>
      <span class="glyphicon glyphicon-log-in"></span> Entrar
    <% end %>
  </div>
<%= render "devise/shared/links" %>
  </fieldset>
<% end %>
</div>

        	
